# Construction Template Environment Configuration

# Notion API Configuration
NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_VERSION=2022-06-28

# Deployment Configuration
NODE_ENV=production
CLIENT_NAME=Example Construction Company
DEPLOYMENT_TIER=professional
DEPLOYMENT_REGION=us-east-1
INCLUDE_SAMPLE_DATA=true
CUSTOM_DOMAIN=

# Integration Configuration (JSON format)
INTEGRATION_CONFIG={"slack":{"webhook":""},"email":{"smtp":""},"quickbooks":{"enabled":false}}

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_RATE_LIMIT=100
TIMEOUT_DURATION=30000
MAX_RETRIES=3

# Monitoring and Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Security Configuration
ENABLE_SECURITY_HEADERS=true
CORS_ORIGIN=*
ENABLE_RATE_LIMITING=true

# Database Configuration
DB_TIMEOUT=30000
MAX_CONCURRENT_OPERATIONS=10

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=300
ENABLE_COMPRESSION=true

# Development Configuration (for local testing)
NOTION_TEST_TOKEN=secret_test_token_for_development
DEBUG_MODE=false
VERBOSE_LOGGING=false

# CI/CD Configuration
CI=false
BUILD_NUMBER=
DEPLOYMENT_ID=
GITHUB_RUN_ID=

# Feature Flags
ENABLE_ADVANCED_FEATURES=true
ENABLE_INTEGRATIONS=true
ENABLE_ANALYTICS=true
ENABLE_MOBILE_OPTIMIZATION=true

# Construction Industry Specific
DEFAULT_MEASUREMENT_UNIT=imperial
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York
CONSTRUCTION_TYPE=commercial

# Template Customization
COMPANY_LOGO_URL=
BRAND_COLOR=#2563eb
ENABLE_CUSTOM_BRANDING=false

# Backup and Recovery
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Compliance and Legal
GDPR_COMPLIANCE=false
HIPAA_COMPLIANCE=false
INDUSTRY_COMPLIANCE=

# Notification Settings
EMAIL_NOTIFICATIONS=true
SLACK_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false

# Mobile Configuration
ENABLE_MOBILE_APP=true
MOBILE_API_ENDPOINT=
OFFLINE_SYNC_ENABLED=true

# Third-party Services
GOOGLE_DRIVE_INTEGRATION=false
MICROSOFT_365_INTEGRATION=false
QUICKBOOKS_INTEGRATION=false

# Analytics and Reporting
ANALYTICS_ENABLED=true
CUSTOM_REPORTS=true
DATA_EXPORT_ENABLED=true

# Error Handling
ERROR_REPORTING=true
AUTOMATIC_RETRY=true
GRACEFUL_DEGRADATION=true

# Development Tools (only in development)
HOT_RELOAD=false
DEBUG_API_CALLS=false
MOCK_DATA=false